<Window x:Class="TuermeVonHanoi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TuermeVonHanoi"
        mc:Ignorable="d"
        Title="Türme von Hanoi" Height="400" Width="460" HorizontalAlignment="Left" VerticalAlignment="Top" MinWidth="300" MinHeight="300" HorizontalContentAlignment="Center" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto">
    <Window.Background>
        <SolidColorBrush Color="White" />
    </Window.Background>
    <Window.Resources>
        <Style TargetType="{x:Type Canvas}">
            <Setter Property="Canvas.Margin" Value="10" />
        </Style>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Button.Margin" Value="10,0,10,10" />
        </Style>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="TextBlock.Margin" Value="10,0,10,10" />
            <Setter Property="TextBlock.TextAlignment" Value="Center" />
            <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
        </Style>
    </Window.Resources>

    <Grid x:Name="main" Visibility="Visible">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="300" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="150" />
            <ColumnDefinition Width="Auto" MinWidth="150" />
            <ColumnDefinition Width="Auto" MinWidth="150" />
        </Grid.ColumnDefinitions>

        <StackPanel Name="Dialog" Background="#eee" Grid.ColumnSpan="3" Grid.RowSpan="2" Visibility="Visible" Panel.ZIndex="1">
            <TextBlock VerticalAlignment="Bottom" Margin="10,50,10,10">You win!</TextBlock>
            <Button Click="button_Refresh_Click" HorizontalAlignment="Center">Play again!</Button>
        </StackPanel>

        <Button x:Name="button_Solve" Grid.Row="1" Grid.Column="0" Content="Solve" Click="button_Solve_Click" IsEnabled="True" Visibility="Visible"/>
        <Button x:Name="button_Cancel" Grid.Row="1" Grid.Column="0" Content="Cancel" Click="button_Cancel_Click" IsEnabled="False" Visibility="Hidden"/>
        <Button x:Name="button_Refresh" Grid.Row="1" Grid.Column="1" Content="Refresh" Click="button_Refresh_Click" IsEnabled="True"/>

        <TextBlock x:Name="label" Grid.Row="1" Grid.Column="2" Margin="20,0,0,10">
            With
            <TextBox x:Name="textBox" TextWrapping="Wrap" Text="{Binding discCount, FallbackValue=7}" />
            discs.
        </TextBlock>

        <!-- left canvas -->
        <Canvas Name="LeftPanel" Grid.Row="0" AllowDrop="True" MouseLeftButtonDown="LeftCanvas_MouseLeftButtonDown" Background="#FFF0F0F0" VerticalAlignment="Bottom" RenderTransformOrigin="0.5,0.5" MinWidth="100" MinHeight="300"/>

        <!-- mid canvas -->
        <Canvas Name="MidPanel" Grid.Row="0" Grid.Column="1" AllowDrop="True" MouseLeftButtonDown="MidCanvas_MouseLeftButtonDown" Background="#FFF0F0F0" VerticalAlignment="Bottom" RenderTransformOrigin="0.5,0.5" MinWidth="100" MinHeight="300"/>

        <!-- right canvas -->
        <Canvas Name="RightPanel" Grid.Row="0" Grid.Column="2" AllowDrop="True" MouseLeftButtonDown="RightCanvas_MouseLeftButtonDown" Background="#FFF0F0F0" VerticalAlignment="Bottom" RenderTransformOrigin="0.5,0.5" MinWidth="100" MinHeight="300"/>

    </Grid>
</Window>
